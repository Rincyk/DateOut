<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/toolbar_inner"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:layout_marginTop="@dimen/_45sdp"
        android:background="#ffffff"
        >

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight=".3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/account_bg"
                    android:paddingStart="@dimen/_27sdp"
                    android:paddingLeft="@dimen/_27sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">

                    <!--      <ImageView
                              android:layout_width="@dimen/_70sdp"
                              android:layout_height="@dimen/_70sdp"

                              android:id="@+id/imageView5"
                              android:background="@drawable/profilepic"
                              android:layout_alignParentBottom="true"
                              android:layout_centerHorizontal="true"
                               />-->

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image_view"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:background="@drawable/profilepic"
                        app:civ_border_width="2dp"


                        app:civ_border_color="@color/colorPrimaryDark"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_1sdp"
                        />

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        app:srcCompat="@drawable/edit"
                        android:tint="#ffffff"
                        android:visibility="visible"

                        android:layout_alignParentBottom="true"
                        android:layout_alignLeft="@+id/profile_image_view"
                        android:layout_alignStart="@+id/profile_image_view"
                        android:layout_marginLeft="85dp"
                        android:layout_marginStart="74dp"
                        android:layout_marginBottom="80dp"
                        android:id="@+id/imageView_profile_upload_icon" />
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight=".8">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <EditText
                        android:id="@+id/edt_name"
                        android:layout_width="@dimen/_240sdp"
                        android:layout_marginTop="@dimen/_45sdp"

                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_20sdp"

                        android:background="@drawable/border_reward"
                        android:drawablePadding="@dimen/_11sdp"
                        android:elegantTextHeight="false"
                        android:fontFamily="sans-serif-light"
                        android:gravity="left"
                        android:hint="Name"
                        android:inputType="text"
                        android:padding="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_15sdp"

                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="@dimen/_13sdp"


                        />

                    <EditText
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:hint="E-mail"
                        android:gravity="left"
                        android:textSize="@dimen/_13sdp"
                        android:editable="false"
                        android:id="@+id/edt_email"
                        android:background="@drawable/border_reward"
                        android:fontFamily="sans-serif-light"
                        android:elegantTextHeight="false"
                        android:layout_marginBottom="@dimen/_20sdp"

                        android:inputType="text"
                        android:drawablePadding="@dimen/_11sdp"

                        android:paddingBottom="@dimen/_15sdp"
                        android:textColorHint="@android:color/darker_gray"
                        android:textColor="@android:color/black"

                        />
                    <EditText
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_40sdp"

                        android:layout_gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:hint="Phone"
                        android:gravity="left"
                        android:textSize="@dimen/_13sdp"

                        android:id="@+id/edt_phone"
                        android:background="@drawable/border_reward"
                        android:fontFamily="sans-serif-light"
                        android:elegantTextHeight="false"
                        android:layout_marginBottom="@dimen/_20sdp"

                        android:inputType="number"
                        android:drawablePadding="@dimen/_11sdp"

                        android:paddingBottom="@dimen/_15sdp"
                        android:textColorHint="@android:color/darker_gray"
                        android:textColor="@android:color/black"

                        />
                    <EditText
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_40sdp"

                        android:layout_gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:hint="Location"
                        android:gravity="left"
                        android:textSize="@dimen/_13sdp"

                        android:id="@+id/edt_location"
                        android:background="@drawable/border_reward"
                        android:fontFamily="sans-serif-light"
                        android:elegantTextHeight="false"
                        android:layout_marginBottom="@dimen/_20sdp"

                        android:inputType="text"
                        android:drawablePadding="@dimen/_11sdp"

                        android:paddingBottom="@dimen/_15sdp"
                        android:textColorHint="@android:color/darker_gray"
                        android:textColor="@android:color/black"

                        />
                    <Button
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:id="@+id/but_update"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:text="Update"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/login_button"/>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_centerInParent="true"
        android:id="@+id/progress_bar"
        android:visibility="gone"/>
</RelativeLayout>