<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    android:background="@drawable/reward_border_2"
    android:layout_margin="@dimen/_5sdp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_weight="1"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/reward_image"

            />


        <ImageView
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"


            android:id="@+id/reward_type"/>

    </RelativeLayout>

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:textSize="@dimen/_11sdp"
            android:id="@+id/reward_text"
            android:textColor="#706f6f"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:maxLines="2"

            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:textSize="@dimen/_11sdp"
            android:id="@+id/reward_points"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/rounded_rectangle_3"
            android:layout_gravity="center|top"
            android:gravity="center|top"
            android:id="@+id/button_redeem">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"

                android:text="Redeem"
                android:textSize="@dimen/_10sdp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
  <LinearLayout
      android:layout_width="@dimen/_50sdp"
android:id="@+id/rewrd_info"
      android:layout_height="@dimen/_50sdp">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/ic_info_outline_black_24dp"
  />
  </LinearLayout>
</RelativeLayout>
