<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/box_back3"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"

    android:gravity="center"
    android:layout_height="@dimen/_100sdp">

    <LinearLayout
        android:id="@+id/layout_chat_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"

            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:text="08"
                android:gravity="center"
                android:textColor="@color/caldroid_holo_blue_dark"
                android:textStyle="bold"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:id="@+id/txt_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"></TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"

            android:gravity="center">
            <TextView
                android:layout_width="1dp"
                android:layout_height="@dimen/_60sdp"


                android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"

            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/txt_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John's fdfgdgfdgfdgfgf"
              android:layout_gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />
            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_20sdp"

                android:layout_gravity="left"
                android:gravity="center"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_10sdp"

                android:layout_height="@dimen/_10sdp"
                android:background="@drawable/label_round_new" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10.00 AM"
                android:paddingLeft="@dimen/_10sdp"

                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"></TextView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
