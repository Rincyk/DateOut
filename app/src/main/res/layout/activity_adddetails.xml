<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
android:id="@+id/activity_adddetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"

    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_tops"
        android:layout_height="@dimen/_45sdp"
        android:layout_width="match_parent"

        android:background="@drawable/navigationbarbg"

        android:navigationIcon="@android:color/white"
        app:theme="@style/ToolbarStyle"



        >

        <RelativeLayout
            android:layout_width="match_parent"


            android:layout_height="match_parent"
            android:id="@+id/relativeLayout"
            >

            <ImageView

                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/back_icon_new"
                android:id="@+id/img_crcdtlnam"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD YOUR DETAILS"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp"
                android:textAllCaps="true"
                android:id="@+id/toolbar_CRCNAM"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/home"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/home" />

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:isScrollContainer="true"

        android:layout_height="0dp"
        android:layout_weight="4">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"


        android:layout_margin="@dimen/_10sdp"
android:paddingTop="@dimen/_50sdp"
        android:paddingBottom="@dimen/_20sdp"

        android:background="@drawable/box"
        android:layout_height="match_parent">

        <TextView
        android:layout_width="match_parent"
            android:gravity="center"

            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"

        android:layout_height="wrap_content"
            android:id="@+id/textView17" />

        <LinearLayout
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:text="Fullname"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/edt_add_fullname"
                android:drawableLeft="@drawable/name"
                android:hint="Full name"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/black"
                android:paddingLeft="@dimen/_10sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:inputType="textPersonName"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:background="@drawable/border"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_5sdp"

                android:textColorHint="@android:color/darker_gray"
                android:gravity="left"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"


        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:text="Email"
            android:visibility="gone"

            android:layout_height="wrap_content" />


            <EditText
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/edt_add_email"
                android:hint="Email"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp"

                android:paddingLeft="@dimen/_10sdp"
                android:drawableLeft="@drawable/email_add"

                android:drawablePadding="@dimen/_10sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/border"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_5sdp"

                android:textColorHint="@android:color/darker_gray"
                android:gravity="left"/>



        </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/_240sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:text="Phone"
            android:visibility="gone"
            android:layout_height="wrap_content" />



        <EditText
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/edt_add_phone"
            android:maxLength="13"
            android:hint="Phone"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/black"
            android:paddingLeft="@dimen/_10sdp"
            android:drawableLeft="@drawable/call"
            android:textSize="@dimen/_13sdp"

            android:drawablePadding="@dimen/_10sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:inputType="phone"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/border"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_5sdp"

            android:textColorHint="@android:color/darker_gray"
            android:gravity="left"/>



    </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:text="Address"
                android:visibility="gone"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_60sdp"
                android:id="@+id/edt_add_address"
                android:drawableLeft="@drawable/name"
                android:hint="Address"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/black"
                android:paddingLeft="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"

                android:drawablePadding="@dimen/_10sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:inputType="textMultiLine"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/border"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_10sdp"

                android:textColorHint="@android:color/darker_gray"

                android:gravity="left"/>


        </LinearLayout>

    </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"


        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:text="DONE"
            android:textColor="@color/white"
            android:id="@+id/but_add_dtls"
            android:textSize="@dimen/_12sdp"
            android:background="@color/button_othrcolor"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="#0067b6"
        android:layout_centerInParent="true" />
  </RelativeLayout>
