<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"

    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_tops"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"

        android:background="@drawable/navigationbarbg"

        android:navigationIcon="@android:color/white"
        app:theme="@style/ToolbarStyle"


        >

        <RelativeLayout
            android:id="@+id/relativeLayout"


            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="@dimen/_40sdp"
                android:gravity="center"
                android:id="@+id/img_crcdtlnam"
                android:layout_height="match_parent">
                <ImageView


                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back_icon_new" />
            </LinearLayout>

            <TextView
                android:id="@+id/toolbar_CRCNAM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="CHAT"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp" />


        </RelativeLayout>


    </android.support.v7.widget.Toolbar>
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_weight="1"
android:padding="@dimen/_20sdp"
        android:background="@drawable/chat_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="@dimen/_120sdp"

            android:layout_height="@dimen/_60sdp"
            android:layout_margin="@dimen/_22sdp"
            android:background="@drawable/chat_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:text="Out of ideas for having fun? Check out great ideas with our local experts. Get help with figuring out plans for tonight, last â€“ minute date ideas and everything else fun.
" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:text="Our experts will sort out things so that you can be free to have unlimited fun!
Email us and get going! " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|top">

            <Button
                android:id="@+id/chat_start"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:background="@drawable/button"
                android:text="START"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
