<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#75000000"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/rounded_rectangle_box"

        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center|bottom"
            android:orientation="vertical"
            android:layout_weight="2"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/close_point_book"
                    android:layout_centerHorizontal="true"
                    android:text="Comments"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"
                    android:id="@+id/textView10" />

                <ImageView
                    android:id="@+id/close_point_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignEnd="@+id/editText_comment"
                    android:layout_alignRight="@+id/editText_comment"
                    android:layout_below="@+id/textView10"
                    android:layout_marginEnd="21dp"
                    android:layout_marginRight="21dp"
                    android:background="@drawable/ic_close_black_24dp"
                    android:backgroundTint="@color/black" />

                <EditText
                    android:id="@+id/editText_comment"
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView10"
                    android:layout_centerHorizontal="true"
                  android:layout_margin="@dimen/_20sdp"
                    android:background="@drawable/edittext_background"
                    android:ems="10"
                    android:textSize="@dimen/_12sdp"
                    android:hint="Suggestions if Any..."
                    android:inputType="textMultiLine"
                    android:textColorHint="@color/black" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"

            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/but_cmnt_ok"
                android:text="ok"
                android:textColor="@color/white"
                android:background="@drawable/button"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>










